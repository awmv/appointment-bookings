{
    "compilerOptions": {
      "target": "ES2018",
      "module": "ESNext",
      "lib": ["ESNext", "DOM"],
      "allowJs": true,
      "checkJs": false,
      "jsx": "preserve",
      "incremental": true,
      "noEmit": true,
      "strict": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noImplicitReturns": false,
      "noFallthroughCasesInSwitch": false,
      "baseUrl": ".",
      "paths": {
        "/*": ["*"]
      },
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "types": ["node", "vuetify"],
      "esModuleInterop": true,
      "preserveSymlinks": true
    },
    "exclude": [
      "./.meteor/**",
      "./packages/**",
      "node_modules"
    ],
    "include": [
      "client/**/*.ts",
      "client/**/*.vue",
      "server/**/*.ts",
      "imports/**/*.ts",
      "imports/**/*.tsx",
      "imports/**/*.vue",
      "tests/**/*.ts"
    ]
  }
  